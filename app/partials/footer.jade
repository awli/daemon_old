div(ng-controller='FooterCtrl')
  nav.navbar.navbar-default.navbar-fixed-bottom.footer
    form(name="radioConfigForm").navbar-left.navbar-form

      .input-group.input-group-sm(style="width: 300px", ng-class="{'has-error': radioConfigForm.radioAddr.$invalid, 'has-success': radioConfigForm.radioAddr.$valid}")
        span.input-group-addon(style="width: 120px;") Radio Address
        input.form-control(
          name="radioAddr",
          ng-model="radioAddr",
          ng-pattern="/[0-9a-fA-F]{16}/",
          tooltip="XBee Radio Address",
          placeholder="Radio Address",
          )

      .input-group.input-group-sm(style="width: 300px", ng-class="{'has-error': radioConfigForm.portPath.$invalid, 'has-success': radioConfigForm.portPath.$valid}")
        span.input-group-btn.dropup
          button#com-ports.btn.input-group-addon.droptown-toggle(style="width: 121px;",
            type="button", data-toggle="dropdown") COM Port 
            span.caret
          ul.dropdown-menu.bottom-up(role="menu", aria-labelledby="com-ports")
            li.disabled(role="presentation", ng-show="portPathList.length == 0")
              a(role="menuitem", tabindex="-1", href="#") No Ports Detected
            li(role="presentation", ng-repeat="port in portPathList")
              a(role="menuitem", tabindex="-1", href="#", ng-click="assignPortPath(port)") {{port}}
        input.form-control(name="portPath", ng-model="portPath",
          placeholder="Select a COM Port",
          ui-validate="{inPortPath: 'inPortPathList($value)'}")
    form.navbar-right.navbar-form
      span.label.label-success(ng-show="radio.initialized()") Radio On
      span.label.label-danger(ng-hide="radio.initialized()") Radio Off
      .btn-group
        button.btn.btn-success(ng-click="initRadio()", ng-disabled="radioConfigForm.$invalid") {{radio.initialized() ? 'Reinit' : 'Init'}}
        button.btn.btn-danger(ng-click="radio.close()", ng-if="radio.initialized()") Close
